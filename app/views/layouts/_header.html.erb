<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to t("title.header"), home_path, id: "logo"%>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("navbar.home"), home_path %></li>
          <li><%= link_to t("navbar.help"), help_path %></li>
          <% if logged_in? %>
            <li><%= link_to t("users"), "#" %></li>
            <li class="dropdown" id="account" >
              <%= link_to "#", class: "dropdown-toggle data-toggle dropdown" do %>
                <%= t "account" %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" id="dropdown-menu">
                <li><%= link_to t("profile"), current_user %></li>
                <li><%= link_to t("setting"), edit_user_path(@current_user) %></li>
                <li class="divider"></li>
                <li> <%= button_to t("logout"), logout_path, {method: :delete}%></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("login"), login_path %></li>
          <% end %>
        </ul>
        <%= link_to "English", locale:"en" %>
        <%= link_to "Vietnamese", locale:"vi" %>
      </nav>
    </div>
</header>
