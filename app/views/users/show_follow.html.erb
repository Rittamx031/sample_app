<% provide(:title, t(".user_profile", name: @user.name)) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_profile"), @user %></span>
      <span><b><%= t(".microposts") %>:</b><%= @user.microposts.count %></span>
    </section>
  </aside>
</div>
<section class="stats">
  <%= render "shared/stats" %>
  <% if @users.any? %>
    <div class="user_avatars">
      <% @users.each do |user| %>
        <%= link_to gravatar_for(user, size: 10), user %>
      <% end %>
    </div>
  <% end %>
</section>
</aside>

<div class="col-md-8">
  <h3><%= t(".title", default: @title) %></h3>
  <% if @users.any? %>
    <ul class="users follow">
      <%= render @users %>
    </ul>
    <%== pagy_nav(@pagy) %>
  <% end %>
</div>
</div>
