<% provide :title, t("sign_up") %>
<h1><%= t("sign_up") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path, data: {tubro: false} do |f| %>
      <%= render "shared/error_messages"%>
      <%= f.label :name  ,t("name_field")%>
      <%= f.text_field :name %>
      <%= f.label :email  ,t("email_field")%>
      <%= f.email_field :email %>
      <%= f.label :password ,t("password")%>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("password_repeat") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("sign_up"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div>
  <%= link_to t("back_to_users"), users_path ,class: "btn btn-success"  %>
</div>
