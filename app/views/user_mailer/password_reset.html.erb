<html>
<head>
  <!-- Include Bootstrap CSS from a CDN -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-4"><%= t("email_activation.subject") %></h1>
      <p class="lead"><%= t("email_activation.intro", name: @user.name) %></p>
      <hr class="my-4">
      <p><%= t("email_activation.activation_link") %></p>
      <%= link_to t("email_activation.activenow"),
       reset_password_url(
      id: @user.reset_digest,
      email: @user.email) %>
</div>
  </div>
</body>
</html>
