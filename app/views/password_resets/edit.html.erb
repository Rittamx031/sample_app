<% provide(:title, t("password_reset_form.title")) %>
<h1><%= t("password_reset_form.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user,url: password_reset_path(id: @user.id),method: :post  do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, t("password_reset_form.password_label") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("password_reset_form.password_confirmation_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("password_reset_form.submit_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
